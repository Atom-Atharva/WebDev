<%- include("partials/header") -%>
    <h1>Compose</h1>

    <form action="/compose" method="post">

        <!--As per bootstrap version 3.3.7-->
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input id='title' class="form-control" type="text" name="postTitle" size="100">

            <label for="post" class="form-label">Post</label>
            <textarea name="postContent" id="post" class="mb-3 form-control " rows="5"></textarea>
        </div>
        <button class="btn btn-primary mt-3" type="submit">Publish</button>

    </form>

    <%- include("partials/footer") -%>